# Aran API Sentinel Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# POCKETBASE CONFIGURATION
# =============================================================================

# PocketBase Server URL
POCKETBASE_URL=http://127.0.0.1:8090

# PocketBase Admin Credentials
POCKETBASE_ADMIN_EMAIL=
POCKETBASE_ADMIN_PASSWORD=

# PocketBase Database Path
POCKETBASE_DB_PATH=./pb_data

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================

# Next.js Environment
NODE_ENV=development

# Next.js Port
PORT=9002

# Next.js Public URL
NEXT_PUBLIC_APP_URL=http://localhost:9002

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Ollama Configuration (Local AI)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite Database Path
DATABASE_PATH=./data/aran.db

# Database Backup Path
BACKUP_PATH=./backups

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable AI Features
ENABLE_AI_FEATURES=true

# Enable Multi-tenant Features
ENABLE_MULTI_TENANT=true

# Enable MCP Security Features
ENABLE_MCP_SECURITY=true

# Enable API Discovery Features
ENABLE_API_DISCOVERY=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Enable Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Enable Error Tracking
ENABLE_ERROR_TRACKING=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Production URL
PRODUCTION_URL=https://your-domain.com

# GitHub Pages URL (for documentation)
GITHUB_PAGES_URL=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable Hot Reload
ENABLE_HOT_RELOAD=true

# Enable TypeScript Strict Mode
ENABLE_STRICT_MODE=true

# Enable ESLint
ENABLE_ESLINT=true

# Enable Prettier
ENABLE_PRETTIER=true
